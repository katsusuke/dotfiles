        path = ~/.config/git/themes.gitconfig
[delta]
        features = hoopoe
	navigate = true    # use n and N to move between diff
	light = false      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)
        side-by-side = true
[merge]
